<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plainbluewallpaper7"
    tools:context="com.example.deivi.boletos.AlterarBoleto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/selecionarAlterar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="90dp"
                android:text="Selecionar Imagem"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagemAlterar"
                android:layout_width="180dp"
                android:layout_height="180dp"

                android:layout_marginHorizontal="90dp"

                app:srcCompat="@drawable/iclauncherbackground" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <EditText
                android:id="@+id/idAlterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:text="id"
                android:inputType="number" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/nomeAlterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:inputType="textPersonName"
                android:text="Nome"

                />

            <EditText

                android:id="@+id/valorAlterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:inputType="numberDecimal"
                android:text="Valor" />

            <EditText
                android:id="@+id/descricaoAlterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"


                android:inputType="textPersonName"
                android:text="Descrição" />

            <Button
                android:id="@+id/btnIserirDataAlterar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:onClick="onInsereDataAlterar"
                android:text="Data de Vencimento" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnalterar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="145dp"
                android:onClick="onAlterar"
                android:text="Alterar" />
        </LinearLayout>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
